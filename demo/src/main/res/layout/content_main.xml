<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.haozhang.widget.MainActivity">

    <ImageView
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:id="@+id/left_img"
        android:layout_width="220dp"
        android:layout_height="137dp"
        android:src="@mipmap/test" />


    <com.haozhang.lib.SlantedTextView
        android:id="@+id/left_text"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:slantedBackgroundColor="@color/primary"
        app:slantedLength="40dp"
        app:slantedMode="right_bottom"
        app:slantedText="Android"
        app:slantedTextColor="@color/primary_light"
        app:slantedTextSize="16sp"
        android:layout_alignBottom="@+id/left_img"
        android:layout_alignEnd="@+id/left_img" />

    <ImageView
        android:id="@+id/right_img"
        android:scaleType="fitXY"
        android:layout_width="220dp"
        android:layout_height="137dp"
        android:layout_below="@id/left_img"
        android:src="@mipmap/test" />

    <com.haozhang.lib.SlantedTextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:slantedBackgroundColor="@color/secondary_text"
        app:slantedLength="40dp"
        app:slantedMode="right"
        app:slantedText="IOS"
        app:slantedTextColor="@color/primary"
        app:slantedTextSize="16sp"
        android:layout_below="@+id/left_img"
        android:layout_alignEnd="@+id/left_img" />

    <ImageView
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_width="220dp"
        android:layout_height="137dp"
        android:layout_below="@id/right_img"
        android:src="@mipmap/test"
        android:id="@+id/imageView" />


    <com.haozhang.lib.SlantedTextView
        android:id="@+id/test"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true" />
</RelativeLayout>
